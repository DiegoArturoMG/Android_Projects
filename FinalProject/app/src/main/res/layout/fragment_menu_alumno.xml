<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#2ea12b"
    tools:context=".fragments.MenuAlumno">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/ivPictureMenu"
                android:layout_width="380dp"
                android:layout_height="130dp"
                android:src="@drawable/android_icon"
                android:layout_weight="1"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tvMailMenu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Mail"
                    android:layout_weight="1"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/tvPassMenu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Password"
                    android:layout_weight="1"
                    android:gravity="center"
                    />

                <Button
                    android:id="@+id/btnLogOut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Log out"
                />

            </LinearLayout>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Name: "
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20dp"
        />

        <TextView
            android:id="@+id/tvNameMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Name"
            android:gravity="center"
            android:textSize="20dp"
        />

        <TextView
            android:id="@+id/tvLastNameMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="LastName"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="20dp"
        />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Student Information"
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="center"
        />

        <ImageButton
            android:id="@+id/ibntEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:src="@drawable/edit"
        />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City: "
            android:textStyle="bold"
            android:textSize="20dp"
        />

        <TextView
            android:id="@+id/tvCityMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="City"
            android:layout_weight="1"
            android:textSize="20dp"
        />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="School: "
            android:textStyle="bold"
            android:textSize="20dp"
        />

        <TextView
            android:id="@+id/tvSchoolMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="School"
            android:layout_weight="1"
            android:textSize="20dp"
        />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Career: "
            android:textStyle="bold"
            android:textSize="20dp"
        />

        <TextView
            android:id="@+id/tvCareerMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Career"
            android:layout_weight="1"
            android:textSize="20dp"
        />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <Button
            android:id="@+id/btnNewMessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="New Message"
            android:layout_weight="1"
        />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            android:id="@+id/btnViewMessagesSend"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="View Sent Messages"
            android:layout_weight="1"
        />

        <Button
            android:id="@+id/btnViewMessagesReceive"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="View Received Messages"
            android:layout_weight="1"
        />

    </LinearLayout>

</LinearLayout>